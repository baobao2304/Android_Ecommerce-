<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.detail.DetailPrBlankFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="left">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/_logo"/>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <ImageView
                android:id="@+id/imgPr"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/_logo"/>
            <View
                android:layout_height="5dp"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:background="@color/colorGrey"/>
            <TextView
                android:id="@+id/txtNamePrDt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:text="Name Product"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txtPricePrDt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:text="15 000 000 VND"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@android:color/holo_red_dark"/>
            <Button
                android:id="@+id/btnAddStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm Vào Giỏ Hàng"
                android:background="@android:color/holo_orange_dark"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"/>
            <View
                android:layout_height="5dp"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:background="@color/colorGrey"/>
            <TextView
                android:id="@+id/txtDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:text="Giao Hàng : 115 Lê Trọng Tấn"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/background_dark"/>
            <View
                android:layout_height="5dp"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:background="@color/colorGrey"/>
            <TextView
                android:id="@+id/txtDecription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:text="In some cases, you might need to define multiple top-level destinations instead of using the default start destination. Using a BottomNavigationView is a common use case for this, where you may have sibling screens that are not hierarchically related to each other and may each have their own set of related destinations. For cases like these, you can instead pass a set of destination IDs to the constructor, as shown below:"
                android:textSize="20dp"
                android:textColor="@android:color/background_dark"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>